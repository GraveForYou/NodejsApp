<div class="mt-4">
  <div class="row">
    {{#each products}}
    <div class="col-6 col-ms-6 col-lg-3">
      <div class="card card-product-item">
        <div class="d-block overflow-hidden">
          <a href="/products/{{this._id}}">
            <img class="card-img-top product-img" src="{{this.image}}" alt="{{this.title}}" />
          </a>
        </div>
        <div class="card-body">
          <div class="text-title" style="height:60px">
            <div class="title-content" style="flex-grow: 1;">
              <a href="/products/{{this._id}}">
                <h5 class="card-title product-title">{{this.title}}</h5>
              </a>
            </div>
          </div>
          <p class="card-text text-break text-truncate">{{this.description}}</p>
          <p class="card-text">{{this.price}}</p>
          <a href="#" class="btn btn-primary">Mua sản phẩm</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>