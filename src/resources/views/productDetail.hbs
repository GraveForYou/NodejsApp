<div class="col-6 col-ms-6 col-lg-3">
    <div class="card card-product-item">
        <div class="d-block overflow-hidden">
            <img class="card-img-top product-img" src="{{product.image}}" alt="{{product.title}}" />
        </div>
        <div class="card-body">
            <div class="text-title" style="height:60px">
                <div class="title-content" style="flex-grow: 1;">
                    <h5 class="card-title product-title">{{product.title}}</h5>
                </div>
            </div>
            <p class="card-text text-break text-truncate">{{product.description}}</p>
            <p class="card-text">{{product.price}}</p>
            <a href="#" class="btn btn-primary">Mua sản phẩm</a>
        </div>
    </div>
</div>